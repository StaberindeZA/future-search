{
  "name": "scripts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/scripts/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/scripts",
        "main": "libs/scripts/src/index.ts",
        "tsConfig": "libs/scripts/tsconfig.lib.json",
        "assets": ["libs/scripts/*.md"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "scripts:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "scripts:build:development",
          "watch": false
        },
        "production": {
          "buildTarget": "scripts:build:production",
          "watch": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/scripts/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/scripts/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "run-script": {
      "executor": "nx:run-commands",
      "configurations": {
        "my-script": {
          "commands": ["node dist/libs/scripts/src/lib/email_test.js"]
        }
      }
    }
  },
  "tags": []
}
